# -*- mode: snippet -*-
# name: Common convenience typedef's for sized C++ types
# key: primitive_typedefs
# --

#include <stdint.h>
#include <stddef.h>
#include <limits.h>
#include <float.h>

typedef int8_t i8;
typedef int16_t i16;
typedef int32_t i32;
typedef int64_t i64;
typedef int32 bool32;

typedef uint8_t u8;
typedef uint16_t u16;
typedef uint32_t u32;
typedef uint64_t u64;

typedef intptr_t isize;
typedef uintptr_t usize;

typedef size_t memory_index;

typedef float f32;
typedef double f64;